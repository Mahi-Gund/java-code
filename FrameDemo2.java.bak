import javax.swing.JFrame;
import java.awt.BorderLayout;
import java.awt.Canvas;
import java.awt.Graphics;
class  FrameDemo2
{
	public static void main(String[] args) 
	{
		JFrame jf=new JFrame("Game");
		jf.setLayout(new BorderLayout()); /*I can only keep 5 component in Border layout and we have to justify it also like in right left otherwise it will keep 5 components in centre by default
											When we want canvas*/
		jf.setSize(500,500);//Values in pixel
		Can c1=new Can();
		jf.add(c1);//Adding frame into canvas
		jf.setVisible(true);//Opening the frame It will show my frame and for close false
	}
	
	static class Can extends Canvas implements Runnable //static because we want it in main method which is static and Runnable because we want to run thread and thread can't be extends
	{
		int x=100,y=250,cp=0;
		Can()
		{
			Thread t1=new Thread(this);//Created object of thread //This:- used to run current instance 
			t1.start();
		}
		public void paint(Graphics g)
		{
			//g.drawString("Welcome",100,100); //Position on canvas
			g.drawRect(100,100,300,300);//100,100 is position and 300,300 is rectangle size
			g.fillOval(x,y,30,30);
		}
		
		public void run()
		{
			while(true)
			{
				if(cp==0)
				{
					x=x+2;
					y=y-2;
					if(x==250)
					{
						cp=1;
					}
				else if(cp==1)
					{
					x=x+2;
					y=y+2;
							if(x==0)
							{
								cp=2;
							}
					}
				else if(cp==2)
						{
						x=x-2;
						y=y-2;
								if (x==100)
								{
									cp=0;
								}
						}
						
					try{
						Thread.sleep(50);
						repaint();//Calls paint method
						}catch(Exception tt)
					{}
					
					
				}/*else{
					x=400;
					y=400;
				}*/
			}
							
		}
			
}//Can class close 
}